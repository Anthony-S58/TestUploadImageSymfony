{% extends 'base.html.twig' %}

{% block title %}Annonces
{% endblock %}

{% block body %}
	<h1>Annonces</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ annonce.id }}</td>
			</tr>
			<tr>
				{% for image in annonce.images %}
					<div>
						<img src="{{ asset('/uploads/' ~ image.name) }}" alt="Image" width="150">
					</div>
				{% endfor %}
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ annonce.title }}</td>
			</tr>
			<tr>
				{% for fichier in annonce.fichiers %}
					<div>
						<a href="{{ asset('/uploads/notices/' ~ fichier.name) }}">notice</a>
					</div>
				{% endfor %}
			</tr>
		</tbody>
	</table>

	<a href="{{ path('annonces_index') }}">back to list</a>

	<a href="{{ path('annonces_edit', {'id': annonce.id}) }}">edit</a>

	{{ include('annonces/_delete_form.html.twig') }}
{% endblock %}
